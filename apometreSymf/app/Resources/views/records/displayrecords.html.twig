{% extends 'base.html.twig' %}


{% block title %}Display Records{% endblock %}

{% block body %}

<table border="1">
	<tr>
		<td>Id</td>
		<td>User Name</td>
		<td>Year</td>
		<td>Month</td>
		<td>Hot Water</td>
		<td>Cold Water</td>
		<td>Room Name</td>
		<td>Edit</td>
	</tr>

{% for record in records %}

	<tr>
		<td> {{record.id }} </td>
		<td> {{ record.myUser.username }} </td>
		<td> {{ record.year }}</td>
		<td> {{ record.month }}</td>
		<td> {{ record.hotWater }} </td>
		<td> {{ record.coldWater }}</td>
		<td> {{ record.room.name }}</td>
		<td>  <a href="/editRecordForm/{{ record.id }}">Edit</a></td>
	</tr>

{%  endfor %}

</table>

{% endblock %}

